<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <servlet-class>controller.AppointmentServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPatientCheckIC</servlet-name>
        <servlet-class>com.clinic.controller.AddPatientCheckIC</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddPatient</servlet-name>
        <servlet-class>com.clinic.controller.AddPatient</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddPatientCheckIC</servlet-name>
        <url-pattern>/AddPatientCheckIC</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddPatient</servlet-name>
        <url-pattern>/AddPatient</url-pattern>
    </servlet-mapping>
    <!-- Nurin -->
    <servlet>
        <servlet-name>AddAppointmentServlet</servlet-name>
        <servlet-class>com.clinic.controller.AddAppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAppointmentServlet</servlet-name>
        <url-pattern>/AddAppointmentServlet</url-pattern>
    </servlet-mapping>

    <!-- Asiah -->
    <servlet>
        <servlet-name>UpdateDocServlet</servlet-name>
        <servlet-class>com.clinic.controller.UpdateDocServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateDocServlet</servlet-name>
        <url-pattern>/UpdateDocServlet</url-pattern>
    </servlet-mapping>
    <!-- Farah Part-->
    <servlet>
        <servlet-name>addDoctorServlet</servlet-name>
        <servlet-class>com.clinic.controller.addDoctorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addDoctorServlet</servlet-name>
        <url-pattern>/addDoctorServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register_empServlet2</servlet-name>
        <servlet-class>com.clinic.controller.register_empServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register_empServlet2</servlet-name>
        <url-pattern>/register_empServlet2</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>login_empServlet2</servlet-name>
        <servlet-class>com.clinic.controller.login_empServlet2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_empServlet2</servlet-name>
        <url-pattern>/login_empServlet2</url-pattern>
    </servlet-mapping>
    <!-- Fatin Part-->
    <servlet>
        <servlet-name>editAppController</servlet-name>
        <servlet-class>com.clinic.controller.editAppController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editPrescriptionController</servlet-name>
        <servlet-class>com.clinic.controller.editPrescriptionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteAppController</servlet-name>
        <servlet-class>com.clinic.controller.deleteAppController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deletePrescriptionController</servlet-name>
        <servlet-class>com.clinic.controller.deletePrescriptionController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/AppointmentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editAppController</servlet-name>
        <url-pattern>/editAppController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editPrescriptionController</servlet-name>
        <url-pattern>/editPrescriptionController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteAppController</servlet-name>
        <url-pattern>/deleteAppController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deletePrescriptionController</servlet-name>
        <url-pattern>/deletePrescriptionController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <resource-ref>
        <res-ref-name>jdbc/myDatasource</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
    <welcome-file-list>
        <welcome-file>login_emp.jsp</welcome-file>
        <welcome-file>AddPatient.jsp</welcome-file>
        <welcome-file>resources/pages/clerk/Patient/AddPatient.jsp</welcome-file>
    </welcome-file-list>
</web-app>
